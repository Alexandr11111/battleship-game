var grid = new Array();
function initGrid(columns, rows) {
	for (iR = 0; iR < rows; iR++) {
    	row = new Array();
    	for (iC = 0; iC < columns; iC++) {
    		row.push(0);
            document.writeln("*");
        }
        document.writeln("</br>");
        grid.push(row)
    }
}
initGrid(10, 10);
function drawGrid() {
	for (iR of grid) {
    	document.writeln('<div style="clear: left">');
    	for(iC in iR) {
        	document.writeln('<div style="display: block; float: left; opacity: 0.3; background:grey; border: 1px solid black; width:40px; height:40px;" onClick="alert()"></div>');
        }
        document.writeln('</div>');
        //document.writeln('</br>');
    }
}
drawGrid();


